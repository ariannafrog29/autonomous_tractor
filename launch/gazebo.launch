<launch>

    <!--  Gazebo  -->

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find robot)/worlds/countryside.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <arg name="wheel_kind" default="tractor"/>   <!-- default | tractor | tractor_large -->
    <arg name="front_kind" default="4wd"/> <!-- swing_axle | caster | 4wd -->

<!--  Custom robot  -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find robot)/urdf/robot.xacro'
            front_kind:=$(arg front_kind) wheel_kind:=$(arg wheel_kind)" />
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
          args="-urdf -model robot -param robot_description"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>

    <!--  CONTROLLER  -->
    <rosparam command="load"
              file="$(find robot)/config/control/joints.yaml"
              ns="joint_publisher"/>
              
    <rosparam command="load"
              file="$(find robot)/config/control/heros_skid_steer.yaml"
              ns="heros_velocity_controller"/>

    <node name="controller_manager" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" args="heros_velocity_controller
                                            joint_publisher"/>

    <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
        <param name="default_topic" value="/heros_velocity_controller/cmd_vel"/>
    </node>

</launch>